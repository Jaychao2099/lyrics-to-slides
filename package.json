{
  "name": "lyrics-to-slides",
  "version": "1.0.0",
  "description": "將歌曲轉換為精美投影片的桌面應用程式",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "reset": "npm cache clean --force && rimraf node_modules && npm install",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "test": "jest"
  },
  "keywords": [
    "lyrics",
    "slides",
    "presentation",
    "music",
    "electron",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10"
  },
  "dependencies": {
    "@marp-team/marp-core": "^3.9.0",
    "axios": "^1.6.2",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.lyricsslides.app",
    "productName": "歌曲投影片生成器",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}
